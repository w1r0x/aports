# Contributor: Denis Ryabyy <vv1r0x@gmail.com>
# Maintainer: Denis Ryabyy <vv1r0x@gmail.com>
pkgname=zbar
pkgver=0.10
pkgrel=0
pkgdesc="ZBar bar code reader"
url="http://zbar.sourceforge.net"
arch="all"
license="GNU LGPL 2.1"
depends="graphicsmagick"
makedepends="linux-headers graphicsmagick-dev"
subpackages="$pkgname-dev $pkgname-doc"
source="http://vcs.bingo-boom.ru/bb_clubs/zbar/repository/archive.tar.bz2 qrdec.patch"
builddir="$srcdir/zbar-master-57fafcbad3a8f3d96627f2a21ed4b0f1aab14910"
options="!check"

prepare() {
  cd $builddir
  default_prepare 
}

build() {
  cd $builddir
  ./configure --enable-video \
              --prefix=/usr \
              --libdir=/usr/lib \
              --enable-codes=qrcode \
              --with-gnu-ld \
              --without-jpeg \
              --without-npapi \
              --without-gtk \
              --without-python \
              --without-qt \
              --without-java
  make
  make DESTDIR="$pkgdir" install
}

