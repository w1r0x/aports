# Maintainer: Denis Ryabyy <vv1r0x@gmail.com>
pkgname=qt5-qtwebchannel
pkgver=5.8.0
pkgrel=0
pkgdesc="Qt5 - QtWebChannel components"
url="http://qt-project.org/"
arch="all"
license="LGPLv2 with exceptions or GPLv3 with exceptions"
depends=""
depends_dev=""
makedepends="$depends_dev
	qt5-qtbase-dev
	"
subpackages="$pkgname-dev"

_ver=${pkgver/_/-}
_ver=${_ver/beta0/beta}
_ver=${_ver/rc0/rc}
_V=${_ver/rc/RC}
case $pkgver in
*_beta*|*_rc*) _rel=development_releases;;
*) _rel=official_releases;;
esac

source="https://download.qt.io/official_releases/qt/${_V%.*}/$_V/submodules/qtwebchannel-opensource-src-$_V.tar.xz"

builddir="$srcdir"/qtwebchannel-opensource-src-$_V

build() {
	cd "$builddir"
	qmake-qt5 || return 1
	make || return 1
}

package() {
	cd "$builddir"
	make install INSTALL_ROOT="$pkgdir" || return 1
	# remove rpath
#	chrpath --delete "$pkgdir"/usr/lib/qt5/libexec/* || return 1
	sed -i -e 's:-L/home[^ ]\+::g' "$pkgdir"/usr/lib/pkgconfig/*.pc
}
