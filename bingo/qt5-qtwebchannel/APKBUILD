sha256sums="5bf5b15413baa235ee2cbfd136ea3b9303b32879b54f9f25bfb4dc96d37d0b4a  qtwebchannel-opensource-src-5.8.0.tar.xz"
sha512sums="3f9b8fa1897ebce5065e38f9f324ede1d2dfb4e13b90dc832a7dd2dfd1f18934d976ab3654fd2fa9fd788e48dec6ebf5766862900cd1523a11f063c22041260a  qtwebchannel-opensource-src-5.8.0.tar.xz"
