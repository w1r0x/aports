# Maintainer: Denis Ryabyy <vv1r0x@gmail.com>
pkgname=tslib
pkgver=1.9
pkgrel=0
subpackages="$pkgname-doc"
pkgdesc="C library for filtering touchscreen events"
url="https://github.com/kergoth/tslib"
arch="all"
license="GPL2"
makedepends="automake autoconf libtool linux-headers"

source="${pkgname}-${pkgver}.tar.gz::https://github.com/kergoth/tslib/releases/download/1.9/${pkgname}-${pkgver}.tar.gz"
builddir="$srcdir"/${pkgname}-${pkgver}

build() {
    cd "$builddir"
    ./autogen.sh && ./configure --prefix /usr && make
}

package() {
    cd "$builddir"
    make DESTDIR="$pkgdir" install
}

md5sums="28a4e1bd6ef50f0eb4be3f8c93614a23  tslib-1.9.tar.gz"
